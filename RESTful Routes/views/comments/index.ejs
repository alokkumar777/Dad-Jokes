<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Comments</h1>
    <ul>
      <% comments.forEach(c => { %>
      <li>
        <%= c.comment %> - <%= c.username %>
        <a href="/comments/<%= c.id %>">View</a>
        <form action="/comments/<%= c.id %>?_method=DELETE" method="post">
          <button>Delete</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <a href="/comments/new">
      <button type="button">New Comment</button>
    </a>
  </body>
</html>
